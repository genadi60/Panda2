@using Microsoft.AspNetCore.Identity
@using Panda2.Data.Models
@inject SignInManager<PandaUser> SignInManager

    <ul class="navbar-nav">
        <li class="nav-item">
            <a  asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>

        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a asp-controller="Receipts" asp-action="Index">Receipts</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Users" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">Logout</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a  asp-controller="Users" asp-action="Register">Register</a>
            </li>
            <li class="nav-item">
                <a  asp-controller="Users" asp-action="Login">Login</a>
            </li>
        }

    </ul>